// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique //@db.VarChar(14)
  createdAt DateTime @default(now())

  followers Follow[] @relation("followers")
  following Follow[] @relation("following")
  Post      Post[]
  Repost    Repost[]
}

model Follow {
  id         Int @id @default(autoincrement())
  followerId Int
  followedId Int

  follower User @relation("followers", fields: [followerId], references: [id], onDelete: Cascade)
  followed User @relation("following", fields: [followedId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([followerId, followedId])
}

model Post {
  id        Int       @id @default(autoincrement())
  userId    Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String //@db.VarChar(200)
  sentiment Sentiment
  createdAt DateTime  @default(now())
  Repost    Repost[]
}

model Repost {
  id             Int        @id @default(autoincrement())
  userId         Int
  user           User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  originalPostId Int
  originalPost   Post       @relation(fields: [originalPostId], references: [id], onDelete: Cascade)
  content        String? //@db.VarChar(200) 
  sentiment      Sentiment?
  createdAt      DateTime   @default(now())

  @@unique([userId, originalPostId])
}

enum Sentiment {
  pos
  neg
  neutral
}
